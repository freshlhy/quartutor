<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "quartutor" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "quartutor" %>">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body class="<%= params[:controller] %> <%= params[:action] %>">

  <%= render 'header' %>

  <%= render 'content' %>

  <%= render 'footer' %>

</body>
</html>